@model WebApplication1.Models.RegisterViewModel

@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Добавить пользователя</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName)
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>
        @{
        List<SelectListItem> list = new List<SelectListItem>();
                foreach(WebApplication1.DAO.AspNetRoles item in new WebApplication1.DAO.DAO().getArrayOfRoles())
                {
                    list.Add(new SelectListItem() { Value = item.Id.ToString(), Text = item.Translated });//Заполняем его
                }
                }


                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password)

                    </div>
                </div>

      
       
    
        
        
                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ConfirmPassword)
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </div>
        <div class="form-group">
           
            <div class="col-md-10">
                @Html.Label("Роль");  @Html.DropDownListFor(model => Model.Role_Id, list);
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">

            </div>
        </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
